            crossorigin="anonymous"></script>
        <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
        <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
        <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
        <div class="modal fade" id="modalSubscriptionForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header text-center">
                        <h4 class="modal-title w-100 font-weight-bold">Adding User</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body mx-3">

                        <div class="md-form mb-4">
                            <i class="fas fa-envelope prefix grey-text"></i>
                            <input type="url" id="form2" class="form-control validate">
                            <label data-error="wrong" data-success="right" for="form2">Upload your Image</label>
                        </div>

                        <div class="md-form mb-5">
                            <i class="fas fa-user prefix grey-text"></i>
                            <input type="text" id="form3" class="form-control validate">
                            <label data-error="wrong" data-success="right" for="form3">Your name</label>
                        </div>

                        <div class="md-form mb-4">
                            <i class="fas fa-envelope prefix grey-text"></i>
                            <input type="text" id="form4" class="form-control validate">
                            <label data-error="wrong" data-success="right" for="form4">Your summary</label>
                        </div>

                    </div>
                    <div class="modal-footer d-flex justify-content-center">
                        <button id="addUser" class="btn btn-primary">Submit<i
                                class="fas fa-paper-plane-o ml-1"></i></button>
                    </div>
                </div>
            </div>
        </div>

        <div class="container">
            <div class="col-md-3">
                <div class="panel text-center">
                    <div class="panel-body"> <img alt="https://bit.ly/2IcnSwz"
                            class="img-md img-circle img-border mar-btm" src="https://bit.ly/2IcnSwz">
                        <h4 class="mar-no">Name</h4>
                    </div>
                    <div class="pad-all">
                        <p class="text-muted"> Summary</p>
                        <div class="pad-btm">
                            {{!-- <button class="btn btn-primary" onclick="openform()">Add User</button> --}}
                            <a href="" class="btn btn-default btn-rounded mb-4 btn btn-primary" data-toggle="modal"
                                data-target="#modalSubscriptionForm">Add User</a>
                        </div>
                    </div>
                </div>
            </div>
            {{#if data}}
            <div class="row bootstrap snippets bootdeys">
                {{#each this.data}}
                <div class="col-md-3">
                    <div class="panel text-center">
                        <div class="panel-body"> <img alt="Avatar" class="img-md img-circle img-border mar-btm"
                                src={{this.img}}>
                            <h4 class="mar-no">{{this.name}}</h4>
                        </div>
                        <div class="pad-all">
                            <p class="text-muted"> {{this.summary}}</p>
                            <div class="pad-btm">
                                <input type="hidden" id="foo" name="zyx" value="{{this}}" />
                                <button id="edit" class="btn btn-primary" data-value="{{this}}">Edit</button>
                                <input type="hidden" id="foo" name="zyx" value="{{this}}" />
                                <button id="delete" class="btn btn-primary" data-value="{{this}}">Delete</button>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            {{/if}}
        </div>

        <style type="text/css">
            body {
                margin-top: 20px;
                background: #ebeef0;
